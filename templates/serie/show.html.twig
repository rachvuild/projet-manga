{% extends 'base.html.twig' %}

{% block title %}Serie{% endblock %}

{% block body %}
    <h1>Serie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ serie.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ serie.titre }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ serie.type }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ serie.image }}</td>
            </tr>
        </tbody>
    </table>
    <ul>
    {% for livre in serie.livres %}
        <li>
            {{ livre.titre }}
        </li>
    {% endfor %}
    </ul>

    <a href="{{ path('app_serie_index') }}">back to list</a>

    <a href="{{ path('app_serie_edit', {'id': serie.id}) }}">edit</a>

    {{ include('serie/_delete_form.html.twig') }}
{% endblock %}
